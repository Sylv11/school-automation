<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center"
    tools:context=".Activity.RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bienvenue"
        android:gravity="center_horizontal"
        android:textSize="30dp"/>

    <EditText
        android:inputType="text"
        android:maxLines="1"
        android:id="@+id/et_register_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nom"
        android:backgroundTint="@color/colorMauve"/>

    <EditText
        android:inputType="text"
        android:maxLines="1"
        android:id="@+id/et_register_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prenom"
        android:backgroundTint="@color/colorMauve"/>

    <EditText
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:id="@+id/et_register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:backgroundTint="@color/colorMauve"/>

    <EditText
        android:maxLines="1"
        android:id="@+id/et_register_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/mot_de_passe"
        android:backgroundTint="@color/colorMauve"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enregistrer"
        android:layout_marginTop="20dp"
        android:background="@drawable/primary_btn"
        android:textColor="#FFF"
        android:id="@+id/btn_register_registerAction"
        android:drawableLeft="@drawable/register"
        android:paddingLeft="5dp"
        android:paddingEnd="30dp"
        android:onClick="onRegisterClickManager"/>

    <Button
        android:id="@+id/btn_register_toLogin"
        android:layout_width="99dp"
        android:layout_height="21dp"
        android:layout_marginTop="40dip"
        android:background="@null"
        android:onClick="onRegisterClickManager"
        android:text="@string/se_connecter"
        android:textAllCaps="false"
        android:textColor="@color/colorMauve"
        android:textSize="15sp" />

</LinearLayout>